.heading{
    margin: 5px 0px 10px;
    font-size: 20px;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    color: #4B4B4B;
}

#actionList{
    padding-left: 15px;
    background-color: rgb(105,105,105);
    border-color: rgb(47,79,79);
    border-width: 5px;
    border-radius: 5px;
}

.actionListFoldout{
    background-color: rgb(204, 59, 57);
    border-color: rgb(166, 44, 43);
    border-width: 2px;
    border-radius: 5px;
    -unity-font-style: bold;
    font-size: 15px;
}

.arrayButtons{
    position:absolute;
    top: 3px;
    width: 20px;
}

#deleteButton{
    right:10px;
}

#moveDownButton{
    right:35px;
}

#moveUpButton{
    right:60px;
}

#btnAddNewAction{
    top:7px;
    right:35px;
}

#btnRemoveAll{
    top:7px;
    right:10px;
}




